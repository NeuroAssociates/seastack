{
    "compilerOptions": {
        "target": "ES2020",
        "module": "ES2020",
        "lib": ["ES2020", "DOM"],
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "inlineSources": true,

        "strict": true,
        "noImplicitAny": true,

        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src/**/*"],
    "exclude": ["dist"]
}